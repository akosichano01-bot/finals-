# config/env.example
# Copy these values into a root `.env` file (not committed) before running the server.

## Server (Express)
# If deploying (Render, etc.), prefer DATABASE_URL.
DATABASE_URL=

# Local Postgres fallback if DATABASE_URL is empty
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ancheta_apartment
DB_USER=postgres
DB_PASSWORD=postgres

# Required: JWT signing secret (no default fallback)
JWT_SECRET=change-me

# Optional: force SSL for Postgres connections
DATABASE_SSL=false

# Optional: PayMongo tenant payments
PAYMONGO_SECRET_KEY=

## Frontend (Vite)
# API base for axios client. In dev, leave as /api and use Vite proxy.
VITE_API_URL=/api

# Dev-only: where Vite should proxy /api requests
VITE_PROXY_TARGET=http://localhost:5000

